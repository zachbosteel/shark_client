<%= form_tag "/sharks", method: :patch do %>
<table> 
  <tr>
    <td><%= label_tag :common_name %></td>
    <td><%= text_field_tag :common_name, @shark["common_name"] %></td>
  </tr>
  <tr>
    <td><%= label_tag :latin_name %></td>
    <td><%= text_field_tag :latin_name, @shark["latin_name"] %></td>
  </tr>
  <tr>
    <td><%= label_tag :habitat_range %></td>
    <td><%= text_field_tag :habitat_range, @shark["habitat_range"] %></td>
  </tr>
  <tr>
    <td><%= label_tag :attacks_on_humans %></td>
    <td><%= text_field_tag :attacks_on_humans, @shark["attacks_on_humans"] %></td>
  </tr> 
</table>
<%= submit_tag %>
<% end %>